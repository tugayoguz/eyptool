CREATE TABLE users (
  id         INTEGER PRIMARY KEY,
  name VARCHAR(30),
  email  VARCHAR(50)
);


  CREATE TABLE T_EVR_EVRAK
   (EVRAK_NO INTEGER PRIMARY KEY, 
	ICERIK_DOSYA_NO INTEGER, 
	EVRAK_SAYI VARCHAR(500), 
	EVRAK_TARIHI TIMESTAMP (6), 
	KURUM_NO INTEGER, 
	KONU_NO INTEGER, 
	GELIS_SEKLI VARCHAR(2 BYTE), 
	GIZLILIK VARCHAR(2 BYTE), 
	SURELI VARCHAR(1 BYTE), 
	SURE_BITIS_TARIHI TIMESTAMP (6), 
	IVEDILIK VARCHAR(2 BYTE), 
	YAZISMA_TIPI VARCHAR(3 BYTE) NOT NULL ENABLE, 
	EVRAK_TURU VARCHAR(10 BYTE), 
	BIRIM_NO INTEGER, 
	YER VARCHAR(4000 BYTE), 
	ACIKLAMA VARCHAR(4000 BYTE), 
	ILGI VARCHAR(4000 BYTE), 
	EK VARCHAR(500 BYTE), 
	LAST_UPDATE_DATE  TIMESTAMP (6), 
	KURUM_EVRAK_NO  VARCHAR(30 BYTE), 
	KURUM_EVRAK_TARIHI  TIMESTAMP (6), 
	KONU_TEXT  VARCHAR(4000 BYTE), 
	KURUM_DEFTER_BIRIM_NO  INTEGER, 
	DAGITIM_ACIKLAMA  VARCHAR(4000 BYTE), 
	ONAYDAN_SONRA_DAGIT  VARCHAR(1 BYTE), 
	EVRAK_CINSI  VARCHAR(2 BYTE), 
	BOLUM_NO  INTEGER, 
	KISISEL_BILGI  VARCHAR(1 BYTE), 
	BILGI_EDINME  VARCHAR(1 BYTE), 
	URETILDIGI_EVRAK_NO  INTEGER, 
	URETICI  VARCHAR(300 BYTE), 
	YAZAR  VARCHAR(300 BYTE), 
	BELGE_REFERANS_NO  VARCHAR(500 BYTE), 
	TELIF_HAKLARI_KANUN_KAPSAMI  VARCHAR(1 BYTE), 
	GUVENLI_ELEKTRONIK_IMZA  VARCHAR(1 BYTE), 
	BELGE_STAT_KAZANMAYAN_DOKUMAN  VARCHAR(1 BYTE), 
	ELEKTRONIK_SERTIFIKA_SAGLAYICI  VARCHAR(500 BYTE), 
	ZAMAN_DAMGASI  TIMESTAMP (6), 
	SIFRELEME_ALGORITMASI  VARCHAR(500 BYTE), 
	DIGER_SAYISAL_ISARETLER  VARCHAR(500 BYTE), 
	FIZIKSEL_DOSYA  VARCHAR(1 BYTE), 
	SAKLAMA_YERI  VARCHAR(4000 BYTE), 
	REPEATFORALLPAGES  VARCHAR(100 BYTE), 
	PAGES_TO_BE_STAMPED  VARCHAR(50 BYTE) DEFAULT Null);
 
	 CREATE TABLE T_EVR_EVRAK_HAREKET  
   ( HAREKET_NO  INTEGER PRIMARY KEY, 
	 ONCEKI_HAREKET_NO  INTEGER, 
	 EVRAK_NO  INTEGER NOT NULL ENABLE, 
	 EVRAK_TIPI  VARCHAR(5 BYTE), 
	 EVRAK_DURUMU  VARCHAR(2 BYTE), 
	 HAREKET_TURU  VARCHAR(2 BYTE), 
	 HAREKET_TARIHI  TIMESTAMP (6), 
	 HAREKET_NOT  VARCHAR(700 BYTE), 
	 BIRIM_NO  INTEGER, 
	 BIRIM_EVRAK_NO  VARCHAR(30 BYTE), 
	 BIRIM_EVRAK_TARIHI  TIMESTAMP (6), 
	 DOSYA_NO  INTEGER, 
	 ISLEM_DURUMU  VARCHAR(2 BYTE), 
	 ISLEM_TARIHI  TIMESTAMP (6), 
	 ILGILI_KULLANICI_NO  INTEGER, 
	 ILGILI_BIRIM_NO  INTEGER, 
	 ILGILI_GOREV_NO  INTEGER, 
	 ISLEM_YAPAN_KULLANICI_NO  INTEGER, 
	 ISLEM_YAPAN_BIRIM_NO  INTEGER, 
	 ISLEM_YAPAN_GOREV_NO  INTEGER, 
	 SURE_BITIS_TARIHI  TIMESTAMP (6), 
	 TASKINSTANCE_ID  INTEGER, 
	 LAST_UPDATE_DATE  TIMESTAMP (6), 
	 DEFTER_BIRIM_NO  INTEGER, 
	 PROCESSINSTANCE_ID  INTEGER, 
	 SON_ARSIV_DURUM  INTEGER(1,0) DEFAULT 0, 
	 SON_ILGI_DURUM  INTEGER(1,0) DEFAULT 0, 
	 SAKLAMA_PLAN_NO  INTEGER, 
	 TASFIYE_TARIHI  TIMESTAMP (6), 
	 TASFIYE_ISLEMI  VARCHAR(2 BYTE), 
	 TASFIYE_EDILDI  VARCHAR(1 BYTE), 
	 IADE  INTEGER(1,0) DEFAULT 0, 
	 BLSM_NODE_ID  INTEGER, 
	 BLSM_PROC_DEF_ID  INTEGER, 
	 BLSM_DAGITIM  INTEGER(1,0) DEFAULT 0);
	 
	 CREATE TABLE T_EVR_DOSYA  
   ( DOSYA_NO  INTEGER PRIMARY KEY, 
	 TANIMI  VARCHAR(250 BYTE) NOT NULL ENABLE, 
	 KONU_NO  INTEGER NOT NULL ENABLE, 
	 DOSYA_SAYI  VARCHAR(100 BYTE), 
	 DURUMU  VARCHAR(2 BYTE), 
	 ACIKLAMA  VARCHAR(500 BYTE), 
	 ACILIS_TARIHI  TIMESTAMP (6), 
	 ACAN_KULLANICI  INTEGER, 
	 KAPANIS_TARIHI  TIMESTAMP (6), 
	 KAPATAN_KULLANICI  INTEGER, 
	 BIRIM_NO  INTEGER, 
	 DOSYA_TURU  VARCHAR(10 BYTE), 
	 TUM_KULLANICILAR  VARCHAR(1 BYTE), 
	 LAST_UPDATE_DATE  TIMESTAMP (6), 
	 YIL_SONUNDA_KAPAT  VARCHAR(1 BYTE) DEFAULT 0, 
	 BIRIM_ARSIV_SURESI  INTEGER(4,0), 
	 KURUM_ARSIV_SURESI  INTEGER(4,0), 
	 SAKLAMA_PLAN_NO  INTEGER, 
	 SAKLAMA_ORTAMI  VARCHAR(250 BYTE), 
	 SAKLAMA_YERI  VARCHAR(250 BYTE), 
	 KAPANACAGI_TARIH  TIMESTAMP (6), 
	 KAPANMA_KRITERI  VARCHAR(2 BYTE), 
	 KAPANMA_KRITER_DEGERI  VARCHAR(10 BYTE), 
	 GIZLILIK  VARCHAR(2 BYTE));
	 
	 CREATE TABLE T_EVR_EVRAK_EK
   ( EK_NO  INTEGER  PRIMARY KEY, 
	 EVRAK_NO  INTEGER NOT NULL ENABLE, 
	 EK  VARCHAR(200 BYTE), 
	 ICERIK_DOSYA_NO  INTEGER, 
	 LAST_UPDATE_DATE  TIMESTAMP (6), 
	 EK_IMZALANIR  VARCHAR(1 BYTE), 
	 EK_SURUMLENEBILIR  VARCHAR(1 BYTE));
	 
	  CREATE TABLE T_ICR_DOSYA_ICERIK  
   ( DOSYA_NO  INTEGER PRIMARY KEY, 
	 DOSYA_ICERIK  BLOB NOT NULL ENABLE, 
	 OZET  BLOB, 
	 IMZA_ICERIK  BLOB, 
	 IMZA_ICERIK_BILGISI  BLOB, 
	 GIA_NOT  BLOB, 
	 INDEKS_ICERIK  BLOB, 
	 IMZA2_ICERIK  BLOB, 
	 IMZA2_ICERIK_BILGISI  BLOB);